<% include partials/header %>

<div class="container">
    <h4 class="text-light"><%= moment(entry.dateCreated).format("D MMM YYYY, h:mm a") %></h4>
    <% entry.tags.forEach(function(tag) { %>
        <a class="badge badge-light p-2 mb-4" href="<%= "/entries?tags=" + encodeURIComponent(tag) %>">
            <%= tag %>
        </a>
    <% }); %>
    <p class="text-light" id="entry-body"><%= entry.body.substring(0, 2000) + (entry.body.length > 2000 ? "..." : "") %></p>
    <a class="toggle-entry btn btn-light" role="button" onclick=expandEntry()>See more</a>
    <a class="toggle-entry btn btn-light d-none" role="button" onclick=collapseEntry()>See less</a>
    <a href="/entries" class="btn btn-primary"></i>All Entries</a>

    <h1 class="text-light">Metadata</h1>
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Entities</h3>
                    <ul class="list-group">
                        <% entry.metadata.nluData.entities.forEach(function(entity, index) { %>
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-left">
                                    <h4 class="m-0"><strong>"<%= entity.name %>"</strong></h4>
                                    <a class="text-primary ml-2" data-toggle="collapse" href="#entity-<%= index %>" role="button" aria-expanded="false" aria-controls="extendedDescription">
                                        Link with href
                                    </a>
                                    <span class="badge badge-primary badge-pill ml-auto">14 mentions</span>
                                </div>
                                <div class="collapse mt-2" id="entity-<%= index %>">
                                    Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry richardson ad squid. Nihil anim keffiyeh helvetica, craft beer labore wes anderson cred nesciunt sapiente ea proident.
                                </div>
                            </li>
                        <% }); %>
                      </ul>
                </div>
            </div>
        </div>
    </div>
    
</div>

<script>
    function expandEntry()
    {
        $("#entry-body").empty();
        $("#entry-body").append("<%= entry.body %>");
        $(".toggle-entry").toggleClass("d-none");
    }
    function collapseEntry()
    {
        $("#entry-body").empty();
        $("#entry-body").append("<%= entry.body.substring(0, 2000) + (entry.body.length > 2000 ? '...' : '') %>");
        $(".toggle-entry").toggleClass("d-none");
    }
</script>

<% include partials/footer %>