<!DOCTYPE html>
<html>

<head>
    <title>AI Notebook</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous"><link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
    <link href="https://fonts.googleapis.com/css?family=Cutive+Mono" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent" id="top-bar">
        <a class="navbar-brand" id="site-title" href="/">AI Notebook</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">

                <%# <span class="sr-only">(current)</span> %>
                <% if (!currentUser) { %>
                    <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                <% } else { %>
                    <% if (currentUser.isAdmin) { %>
                        <li class="nav-item navbar-light">
                            <a class="nav-link disabled text-info text-decoration-none" href="#" tabindex="-1" aria-disabled="true">Welcome, admin user <%= currentUser.username %></a>
                        </li>
                        <li class="nav-item active bg-info ml-2 mr-4"><a class="nav-link" href="/quotes">Quotes</a></li>
                    <% } %>
                    <li class="nav-item mr-2"><a class="nav-link" href="/home">Home</a></li>
                    <li class="nav-item mr-2"><a class="nav-link" href="/data">Metadata</a></li>
                    <li class="nav-item mr-2"><a class="nav-link" href="/entries">Entries</a></li>
                    <li class="nav-item mr-2"><a class="nav-link" href="/account">Account</a></li>
                    <li class="nav-item mr-2"><a class="nav-link" href="/logout">Logout</a></li>
                <% } %>
            </ul>
        </div>
    </nav>

    <div class="ui container">
        <% if (success && success.length > 0) { %>
        <div class="ui positive message" style="margin-top: 5em">
            <i class="close icon"></i>
            <div class="header">
                Success
            </div>
            <p><%= success %></p>
        </div>
        <% } %>
        <% if (error && error.length > 0) { %>
        <div class="ui negative message" style="margin-top: 5em">
            <i class="close icon"></i>
            <div class="header">
                Error
            </div>
            <p><%= error %></p>
        </div>
        <% } %>
    </div>

    <script>
        $('.message .close')
            .on('click', function () {
                $(this)
                    .closest('.message')
                    .transition('fade')
                    ;
            })
            ;
    </script>