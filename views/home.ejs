<% include partials/header %>

<div class="container mb-5 text-light text-center">
    <p class="typewriter">Quote of the day:</p>
    <p class="quote"><em>"<%= quote.body %>"</em></p>
    <% if (quote.author) { %>
            <div>
                <strong>-<%= quote.author %></strong><% if (quote.source) { %>, <%= quote.source %><% } %>
            </div>
    <% } %>
</div>

<div class="container mb-5 text-light text-center">
    <div class="value"><%= currentUser.streak %><i class="ui small fire icon"></i></div>
    <div class="label">Current streak</div>
    <br>
    <a href="/entries/new" class="btn btn-primary">Create new entry</a>
</div>



<div class="container mt-5 text-light text-center">
    <h2>Your Stats</h2>
    <div class="row">
        <div class="col">
            <div class="value"><%= moment().diff(moment(currentUser.dateCreated), 'days') %></div>
            <div class="label">Days since creation</div>
        </div>
        <div class="col">
            <div class="value"><%= entryCount %></div>
            <div class="label">Entries</div>
        </div>
        <div class="col">
            <div class="value"><%= wordCount %></div>
            <div class="label">Words</div>
        </div>
    </div>
</div>

<% include partials/footer %>