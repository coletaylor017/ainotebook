<% include partials/header %>

<div class="container my-5 text-light text-center">
    <p class="typewriter">Quote of the day:</p>
    <p class="quote"><em>"<%= quote.body %>"</em></p>
    <% if (quote.author) { %>
            <div>
                <strong>-<%= quote.author %></strong><% if (quote.source) { %>, <%= quote.source %><% } %>
            </div>
    <% } %>
</div>

<div class="container mb-5 text-light text-center">
    <div class="mb-4">
        <h2><%= currentUser.streak %></h2>
        Current streak        
    </div>
    <a href="/entries/new" class="btn btn-primary">Create new entry</a>
</div>

<div class="container mt-5 px-5 text-light text-center">
    <h2 class="mb-3 mx-5 p-3 border-bottom">Your Stats</h2>
    <div class="row">
        <div class="col">
            <h2><%= moment().diff(moment(currentUser.dateCreated), 'days') %></h2>
            Days since creation
        </div>
        <div class="col">
            <h2><%= entryCount %></h2>
            Entries
        </div>
        <div class="col">
            <h2><%= wordCount %></h2>
            Words
        </div>
    </div>
</div>

<% include partials/footer %>