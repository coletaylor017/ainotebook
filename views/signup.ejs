<% include partials/header %>

<script>
function confirmForm(form) {
    if (confirm("Are you sure you want to submit the form?")) {
        form.submit();
    }
    else {
        alert("You decided to not submit the form!");
    }
};
</script>

<div class="spacer"></div><div class="spacer"></div>

<div class="ui inverted text container center aligned main">
    
    <h2 class="ui header">Sign Up</h2>
    
    <div class="ui left aligned container">
        <form class="ui form" action="/register" onsubmit="return confirmForm(this.form)" method="POST">
            <div class="field">
                <input type="text" placeholder="username" name="username" autofocus>
            </div>
            <div class="field">
                <input type="password" placeholder="password" name="password">
            </div>
            <button class="ui basic green button">Sign Up</button>
            <a href="/login">Or log in instead</a>
       </form>
    </div>
</div>
